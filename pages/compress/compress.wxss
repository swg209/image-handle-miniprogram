/* pages/compress/compress.wxss */
page {
  --primary-color: #1aad19;
  --primary-light: rgba(26, 173, 25, 0.1);
  --primary-gradient: linear-gradient(135deg, #1aad19, #0e9e0d);
  --text-color: #333;
  --text-secondary: #666;
  --text-light: #999;
  --background-color: #f7f7f7;
  --card-background: #fff;
  --border-radius: 16rpx;
  --shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --animation-duration: 0.3s;
  --card-padding: 40rpx;
  --card-margin: 40rpx;
  
  background-color: var(--background-color);
  color: var(--text-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 30rpx;
  box-sizing: border-box;
  padding-bottom: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 页面标题 */
.page-header {
  margin-bottom: var(--card-margin);
  text-align: center;
  width: 100%;
}

.page-title {
  font-size: 44rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  color: var(--text-color);
}

.page-subtitle {
  font-size: 28rpx;
  color: var(--text-light);
}

/* 卡片部分 - 统一样式 */
.tool-section {
  background-color: var(--card-background);
  border-radius: var(--border-radius);
  padding: var(--card-padding);
  margin-bottom: var(--card-margin);
  box-shadow: var(--shadow);
  position: relative;
  overflow: hidden;
  width: 100%;
  box-sizing: border-box;
  max-width: 700rpx;
}

.tool-section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 10rpx;
  height: 100%;
  background: var(--primary-gradient);
}

.section-icon {
  position: absolute;
  right: var(--card-padding);
  top: var(--card-padding);
  width: 60rpx;
  height: 60rpx;
  opacity: 0.7;
}

.section-icon-img {
  width: 100%;
  height: 100%;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  color: var(--text-color);
  position: relative;
  padding-bottom: 15rpx;
}

.section-title::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 60rpx;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

/* 图片上传区域 */
.image-container {
  width: 100%;
  height: 400rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.02);
  border-radius: var(--border-radius);
  overflow: hidden;
  position: relative;
  border: 2rpx dashed rgba(0, 0, 0, 0.1);
  transition: all var(--animation-duration);
}

.image-container:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.empty-image {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--text-light);
  font-size: 28rpx;
  width: 100%;
  height: 100%;
}

.upload-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: var(--primary-light);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.upload-icon-plus {
  font-size: 70rpx;
  color: var(--primary-color);
  font-weight: 300;
  margin-top: -10rpx;
}

.upload-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 滑块区域 - 美化 */
.quality-selection {
  width: 100%;
}

.quality-desc {
  font-size: 26rpx;
  color: var(--text-light);
  margin-bottom: 40rpx;
  background-color: rgba(0, 0, 0, 0.02);
  padding: 16rpx 20rpx;
  border-radius: var(--border-radius);
  border-left: 4rpx solid var(--primary-color);
}

.quality-indicator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  margin-top: 30rpx;
  background-color: rgba(0, 0, 0, 0.02);
  padding: 16rpx 20rpx;
  border-radius: var(--border-radius);
}

.quality-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.quality-value {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
  background-color: var(--primary-light);
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(26, 173, 25, 0.2);
}

slider {
  margin: 40rpx 0;
  width: 100%;
}

/* 压缩信息 - 美化 */
.compression-info {
  margin: 30rpx 0;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.02);
  border-radius: var(--border-radius);
  border-left: 4rpx solid var(--primary-color);
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  background-color: var(--primary-light);
  border-radius: 50%;
  position: relative;
}

.file-size-icon::before {
  content: "";
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background-color: var(--primary-color);
  border-radius: 4rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.info-text {
  flex: 1;
}

.info-label {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.info-value {
  font-size: 28rpx;
  color: var(--text-color);
  font-weight: 500;
  margin-left: 10rpx;
}

/* 按钮样式 - 统一美化 */
.action-button {
  width: 100%;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 30rpx;
  background-color: var(--primary-color);
  color: white;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(26, 173, 25, 0.3);
  transition: all var(--animation-duration);
}

.action-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(26, 173, 25, 0.2);
}

.action-button.processing {
  background-color: #999;
  box-shadow: none;
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  margin-right: 16rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 结果区域 - 美化 */
.result-section {
  padding-top: var(--card-padding);
}

.success-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  background-color: var(--primary-light);
  padding: 16rpx;
  border-radius: var(--border-radius);
}

.success-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  margin-right: 16rpx;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(26, 173, 25, 0.3);
}

.success-icon::before {
  content: "";
  position: absolute;
  width: 16rpx;
  height: 8rpx;
  border-left: 3rpx solid white;
  border-bottom: 3rpx solid white;
  transform: rotate(-45deg);
  top: 40%;
  left: 32%;
}

.success-indicator text {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 500;
}

/* 结果信息区域 - 美化 */
.result-info {
  margin-bottom: 40rpx;
  padding: 30rpx;
  background-color: rgba(0, 0, 0, 0.02);
  border-radius: var(--border-radius);
  border-left: 4rpx solid var(--primary-color);
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.info-row .info-item {
  flex-direction: column;
  align-items: flex-start;
  flex: 1;
  background-color: white;
  padding: 16rpx;
  border-radius: var(--border-radius);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.info-row .info-item:first-child {
  margin-right: 20rpx;
}

.info-row .info-label {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  color: var(--text-secondary);
}

.info-row .info-value {
  font-size: 34rpx;
  font-weight: 600;
  margin-left: 0;
}

.compressed-size {
  color: var(--primary-color);
}

.compression-rate {
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.rate-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  display: block;
}

.rate-value-container {
  display: flex;
  flex-direction: column;
}

.rate-value {
  font-size: 46rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 16rpx;
}

.rate-bar-container {
  width: 100%;
  height: 16rpx;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 8rpx;
  overflow: hidden;
}

.rate-bar {
  height: 100%;
  background: var(--primary-gradient);
  border-radius: 8rpx;
  transition: width 1s ease-out;
}

/* 图片对比区域 - 美化 */
.images-compare {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  position: relative;
  background-color: rgba(0, 0, 0, 0.02);
  border-radius: var(--border-radius);
  padding: 30rpx 20rpx;
  border-left: 4rpx solid var(--primary-color);
}

.tap-hint {
  font-size: 24rpx;
  color: var(--text-light);
  text-align: center;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: fit-content;
  align-self: center;
}

.tap-hint::before, .tap-hint::after {
  content: "";
  height: 1rpx;
  width: 30rpx;
  background-color: rgba(0, 0, 0, 0.05);
  margin: 0 10rpx;
}

.compare-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  width: 100%;
  background-color: white;
  padding: 20rpx;
  border-radius: var(--border-radius);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.compare-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  background-color: var(--primary-light);
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.compare-image {
  width: 100%;
  height: 360rpx;
  background-color: rgba(0, 0, 0, 0.02);
  border-radius: var(--border-radius);
  object-fit: contain;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.compare-divider {
  width: 100%;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.05);
  margin: 20rpx 0;
  position: relative;
}

.compare-divider::after {
  content: "对比";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: white;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: var(--text-light);
  border-radius: 10rpx;
}

.save-button {
  background: var(--primary-gradient);
  margin-top: 50rpx;
}

.prominent-button {
  height: 100rpx;
  font-size: 34rpx;
  margin-top: 50rpx;
  animation: pulse 2s infinite;
  box-shadow: 0 8rpx 25rpx rgba(26, 173, 25, 0.4);
}

@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 8rpx 25rpx rgba(26, 173, 25, 0.4);
  }
  50% {
    transform: scale(1.03);
    box-shadow: 0 10rpx 30rpx rgba(26, 173, 25, 0.6);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 8rpx 25rpx rgba(26, 173, 25, 0.4);
  }
}

.save-hint {
  font-size: 26rpx;
  color: var(--text-secondary);
  text-align: center;
  margin-top: 20rpx;
  background-color: var(--primary-light);
  padding: 16rpx 30rpx;
  border-radius: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: fit-content;
  align-self: center;
  display: flex;
  align-items: center;
}

.save-hint::before {
  content: "!";
  width: 30rpx;
  height: 30rpx;
  background-color: var(--primary-color);
  color: white;
  border-radius: 50%;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 20rpx;
}

.save-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  position: relative;
}

.save-icon::before {
  content: "";
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  border-right: 3rpx solid white;
  border-bottom: 3rpx solid white;
  transform: rotate(45deg);
  top: 4rpx;
  left: 7rpx;
}

.save-icon::after {
  content: "";
  position: absolute;
  width: 3rpx;
  height: 20rpx;
  background-color: white;
  top: 6rpx;
  left: 15rpx;
}

/* 隐藏的Canvas */
.hidden-canvas {
  width: 300px;
  height: 300px;
  position: absolute;
  left: -9999px;
  top: -9999px;
  visibility: hidden;
}

/* 动画效果 */
.animation-fade-in {
  animation: fadeIn var(--animation-duration) ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.animation-slide-up {
  animation: slideUp var(--animation-duration) ease-out;
}

@keyframes slideUp {
  from { 
    opacity: 0;
    transform: translateY(50rpx);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

.hidden {
  opacity: 0;
  transform: translateY(50rpx);
}

/* 修复额外的闭合标签 */
.container {
  position: relative;
}

/* 添加滚动指示样式 */
.scroll-indicator {
  width: 50rpx;
  height: 50rpx;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  background-color: rgba(26, 173, 25, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  z-index: 100;
  animation: bounce 2s infinite;
}

.scroll-indicator::after {
  content: '';
  width: 15rpx;
  height: 15rpx;
  border-right: 3rpx solid white;
  border-bottom: 3rpx solid white;
  transform: rotate(45deg) translateY(-5rpx);
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-10rpx);
  }
  60% {
    transform: translateY(-5rpx);
  }
} 