/* pages/compress/compress.wxss */
.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.tool-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.image-container {
  width: 100%;
  height: 360rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.empty-image {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

.empty-image .icon {
  font-size: 70rpx;
  margin-bottom: 10rpx;
}

.action-button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
  background-color: #f0f0f0;
  color: #333;
  border: none;
}

.action-button.primary {
  background-color: #1aad19;
  color: #fff;
}

.slider-container {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
}

.slider-text {
  font-size: 24rpx;
  color: #999;
  width: 100rpx;
}

slider {
  flex: 1;
}

.result-section {
  margin-top: 40rpx;
}

.result-info {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.info-label {
  color: #666;
}

.info-value {
  color: #333;
  font-weight: bold;
}

.images-compare {
  display: flex;
  margin-bottom: 30rpx;
}

.compare-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.compare-item text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.compare-item image {
  width: 100%;
  height: 240rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.hidden-canvas {
  width: 300px;
  height: 300px;
  position: absolute;
  left: -9999px;
  top: -9999px;
  visibility: hidden;
} 