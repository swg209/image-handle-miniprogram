<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="header">
      <text class="title">图片处理工具箱</text>
      <text class="subtitle">一站式图片处理解决方案</text>
    </view>
    
    <view class="function-list">
      <view class="function-item" bindtap="navigateTo" data-page="compress">
        <view class="function-icon">
          <image src="/images/compress.png" mode="aspectFit"></image>
        </view>
        <view class="function-info">
          <text class="function-title">图片压缩</text>
          <text class="function-desc">压缩图片大小，保持画质</text>
        </view>
      </view>
      
      <view class="function-item" bindtap="navigateTo" data-page="removebg">
        <view class="function-icon">
          <image src="/images/removebg.png" mode="aspectFit"></image>
        </view>
        <view class="function-info">
          <text class="function-title">抠图去背景</text>
          <text class="function-desc">智能分离前景与背景</text>
        </view>
      </view>
      
      <view class="function-item" bindtap="navigateTo" data-page="recognize">
        <view class="function-icon">
          <image src="/images/recognize.png" mode="aspectFit"></image>
        </view>
        <view class="function-info">
          <text class="function-title">图片识别</text>
          <text class="function-desc">识别图片中的文字和内容</text>
        </view>
      </view>
      
      <view class="function-item" bindtap="navigateTo" data-page="idphoto">
        <view class="function-icon">
          <image src="/images/idphoto.png" mode="aspectFit"></image>
        </view>
        <view class="function-info">
          <text class="function-title">证件照制作</text>
          <text class="function-desc">快速生成标准证件照</text>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
