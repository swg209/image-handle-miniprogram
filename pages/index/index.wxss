/**index.wxss**/
page {
  height: 100vh;
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif;
}

/* 加载动画 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  z-index: 999;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部渐变背景 */
.gradient-header {
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  color: white;
  padding: 60rpx 40rpx 100rpx;
  position: relative;
  overflow: hidden;
}

.header-content {
  position: relative;
  z-index: 2;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.app-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 装饰元素 */
.floating-shapes {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.shape {
  position: absolute;
  border-radius: 50%;
  opacity: 0.15;
  background: white;
}

.shape-1 {
  width: 200rpx;
  height: 200rpx;
  top: -50rpx;
  right: -50rpx;
}

.shape-2 {
  width: 120rpx;
  height: 120rpx;
  bottom: 40rpx;
  left: 60rpx;
}

.shape-3 {
  width: 80rpx;
  height: 80rpx;
  top: 60rpx;
  left: 40%;
}

/* 卡片容器 */
.card-container {
  flex: 1;
  margin-top: -60rpx;
  padding: 0 30rpx 40rpx;
  position: relative;
  z-index: 5;
}

/* 工具区域 */
.tools-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 10rpx;
}

.section-title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 工具卡片网格 */
.tools-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.tool-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.tool-card::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 6rpx;
  background: linear-gradient(90deg, #6e8efb, #a777e3);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.3s;
}

.tool-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tool-card:active::after {
  transform: scaleX(1);
}

.tool-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.tool-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.tool-desc {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 使用提示区域 */
.tips-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.05);
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tips-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.tips-list {
  padding-left: 20rpx;
}

.tip-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #555;
  line-height: 1.5;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-bullet {
  color: #6e8efb;
  margin-right: 10rpx;
  font-weight: bold;
}