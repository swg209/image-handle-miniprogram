/**index.wxss**/
page {
  height: 100vh;
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif;
}

/* 加载动画 */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  z-index: 999;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 顶部渐变区域 */
.gradient-header {
  position: relative;
  height: 340rpx;
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  border-radius: 0 0 50rpx 50rpx;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(110, 142, 251, 0.2);
}

.header-content {
  position: relative;
  z-index: 2;
  animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.app-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.app-subtitle {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* 装饰元素 */
.floating-shapes {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}

.shape {
  position: absolute;
  border-radius: 50%;
  opacity: 0.4;
}

.shape-1 {
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(255, 255, 255, 0.3);
  top: -50rpx;
  right: -50rpx;
  animation: float 8s infinite ease-in-out;
}

.shape-2 {
  width: 300rpx;
  height: 300rpx;
  background-color: rgba(255, 255, 255, 0.2);
  bottom: -100rpx;
  left: -100rpx;
  animation: float 10s infinite ease-in-out reverse;
}

.shape-3 {
  width: 150rpx;
  height: 150rpx;
  background-color: rgba(255, 255, 255, 0.15);
  top: 50rpx;
  left: 50%;
  animation: float 7s infinite ease-in-out 1s;
}

@keyframes float {
  0% { transform: translate(0, 0); }
  50% { transform: translate(20rpx, 20rpx); }
  100% { transform: translate(0, 0); }
}

/* 卡片容器区域 */
.card-container {
  padding: 30rpx;
  margin-top: -60rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  flex: 1;
}

/* 工具区域 */
.tools-section {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
  animation: slideUp 0.6s ease-out;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-right: 16rpx;
}

.title-line {
  flex: 1;
  height: 4rpx;
  background: linear-gradient(to right, #6e8efb, rgba(167, 119, 227, 0.3));
  border-radius: 2rpx;
}

.tools-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.tool-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid #f0f2f5;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.tool-card:active {
  transform: scale(0.97);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.tool-card::after {
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: linear-gradient(rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0));
  transform: translateY(-100%);
  transition: transform 0.3s ease;
}

.tool-card:active::after {
  transform: translateY(0);
}

.tool-icon-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.tool-card:active .tool-icon-container {
  transform: scale(1.05);
}

.compress {
  background: linear-gradient(135deg, #43cea2, #3bb2b8);
}

.removebg {
  background: linear-gradient(135deg, #ff9a9e, #fad0c4);
}

.recognize {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.idphoto {
  background: linear-gradient(135deg, #f6d365, #fda085);
}

.tool-icon {
  width: 60rpx;
  height: 60rpx;
  filter: brightness(0) invert(1);
}

.tool-info {
  text-align: center;
}

.tool-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.tool-desc {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 提示卡片 */
.tips-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
  animation: slideUp 0.8s ease-out 0.2s both;
}

.tips-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.tips-icon {
  font-size: 36rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  animation: fadeInTip 0.5s ease-out both;
}

.tip-item:nth-child(1) { animation-delay: 0.3s; }
.tip-item:nth-child(2) { animation-delay: 0.5s; }
.tip-item:nth-child(3) { animation-delay: 0.7s; }

@keyframes fadeInTip {
  from { opacity: 0; transform: translateX(20rpx); }
  to { opacity: 1; transform: translateX(0); }
}

.tip-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: #6e8efb;
  border-radius: 50%;
  margin-top: 8rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
}

/* 底部信息 */
.footer {
  padding: 40rpx 0;
  text-align: center;
  animation: fadeIn 1s ease-out 0.5s both;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
} 