/* pages/idphoto/idphoto.wxss */
.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.tool-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.image-container {
  width: 100%;
  height: 360rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.empty-image {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

.empty-image .icon {
  font-size: 70rpx;
  margin-bottom: 10rpx;
}

.action-button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
  background-color: #f0f0f0;
  color: #333;
  border: none;
}

.action-button.primary {
  background-color: #1aad19;
  color: #fff;
}

.spec-selector {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.spec-item {
  width: calc(33.33% - 16rpx);
  margin: 8rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.spec-item.selected {
  background-color: #1aad19;
  color: #fff;
}

.spec-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.spec-size {
  font-size: 22rpx;
  color: #999;
}

.spec-item.selected .spec-size {
  color: rgba(255, 255, 255, 0.8);
}

.color-selector {
  display: flex;
  margin-bottom: 20rpx;
}

.color-item {
  flex: 1;
  height: 70rpx;
  margin: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  position: relative;
  border: 2rpx solid transparent;
  overflow: hidden;
}

.color-item:first-child {
  margin-left: 0;
}

.color-item:last-child {
  margin-right: 0;
}

.color-item.selected {
  border-color: #333;
}

.color-item text {
  font-size: 28rpx;
  color: #333;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
}

.result-section {
  margin-top: 40rpx;
}

.id-photo-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  overflow: hidden;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.id-photo {
  max-width: 100%;
  max-height: 400rpx;
}

.photo-info {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
} 