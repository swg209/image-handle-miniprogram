/* pages/recognize/recognize.wxss */
.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.tool-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.image-container {
  width: 100%;
  height: 360rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.empty-image {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

.empty-image .icon {
  font-size: 70rpx;
  margin-bottom: 10rpx;
}

.action-button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
  background-color: #f0f0f0;
  color: #333;
  border: none;
}

.type-selector {
  display: flex;
  margin-bottom: 20rpx;
}

.type-item {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  margin: 0 10rpx;
  border-radius: 8rpx;
}

.type-item:first-child {
  margin-left: 0;
}

.type-item:last-child {
  margin-right: 0;
}

.type-item.selected {
  background-color: #1aad19;
  color: #fff;
}

.result-section {
  margin-top: 40rpx;
}

.result-text-box {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.object-list {
  margin-bottom: 20rpx;
}

.object-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.object-name {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.confidence-bar-bg {
  flex: 1;
  height: 24rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  overflow: hidden;
  margin: 0 20rpx;
}

.confidence-bar {
  height: 100%;
  background-color: #1aad19;
  border-radius: 12rpx;
}

.confidence-value {
  width: 80rpx;
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

.face-result {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.face-count {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
  font-weight: bold;
}

.face-attributes {
  border-top: 1px solid #eee;
  padding-top: 20rpx;
}

.attribute-item {
  display: flex;
  margin-bottom: 16rpx;
}

.attribute-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
}

.attribute-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
} 